+func checkErrno(r1 uintptr, e1 error) error {
+	if r1 == 0 {
+		if e, ok := e1.(syscall.Errno); ok && e != 0 {
+			return e1
+		}
+		return syscall.EINVAL
+	}
+	return nil
+}
