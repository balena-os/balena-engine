+	out, err := exec.Command("wmic", "pagefile", "list", "full").Output()
+	if err != nil {
+		return err
+	}
+	total, err := parseWmicOutput(out, []byte("AllocatedBaseSize"))
+	if err != nil {
+		return err
+	}
+	used, err := parseWmicOutput(out, []byte("CurrentUsage"))
+	if err != nil {
